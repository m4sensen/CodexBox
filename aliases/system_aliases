# update
alias update="bash '$HOME/CodexBox/aliases/aliasesBranch/update.sh'"

alias poweroff='systemctl poweroff'
alias reboot='systemctl reboot'
alias suspend='echo -e "\nüí§ You are about to suspend your system.\nSaves your session to RAM (fast wake-up, but data will be lost if power is cut).\nDo you want to proceed? (y/n): " && read confirm && [ "$confirm" == "y" ] && systemctl suspend || echo "Operation canceled."'
alias hibernate='echo -e "\n‚ùÑÔ∏è You are about to hibernate your system.\nSaves your session to disk and powers off (slower wake-up, but data is preserved).\nDo you want to proceed? (y/n): " && read confirm && [ "$confirm" == "y" ] && systemctl hibernate || echo "Operation canceled."'
alias hybridSleep='echo -e "\nüåô You are about to hybrid-sleep your system.\nCombines suspend (fast wake-up) + hibernate (safe recovery if power is lost).\nDo you want to proceed? (y/n): " && read confirm && [ "$confirm" == "y" ] && systemctl hybrid-sleep || echo "Operation canceled."'

# Log out of current session (for graphical environments)
alias logout='gnome-session-quit --logout --no-prompt || pkill -KILL -u $USER'
alias lock='loginctl lock-session || gnome-screensaver-command -l || dm-tool lock || i3lock'
alias sessionStatus='loginctl show-session $(loginctl | grep $USER | awk "{print \$1}")'

alias disk='lsblk -o NAME,SIZE,FSTYPE,MOUNTPOINT'
alias ram='htop || top'
alias logs='journalctl -xe'
alias logsNow='journalctl -f'